@model  IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>

@{
    ViewBag.Title = "Roles";
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<h2>Roles</h2>
<div>
    @foreach (var  role in Model)
    {
        <p>
            <strong>
                @role.Name
            </strong>
            <span onclick="return confirm('Are you sure you want to delete?')"><a href="/Roles/Delete?RoleName=@role.Name" class="delLink" style="color: red;">Delete</a></span>
        </p>
    }
    @Ajax.ActionLink("Create Role", "Create", new AjaxOptions() { UpdateTargetId = "divforcreate", InsertionMode = InsertionMode.Replace })
    
</div>
<div id="divforcreate"></div>